<div class="w-full">
  <%= render 'nav' %>
  
  <div class='mt-8 flex flex-col gap-4 items-center mx-5'>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <h1 class=' self-center text-2xl'>My Categories </h1>
    <p class='self-end text-lg'>Total Cost: <%=@total_amount%></p>
    <%if @groups.empty?%>
      <h1>NO Categoires! Please Add catagories.</h1>
    <%else%>
      <div id="groups" class="min-w-full mt-8">
        <%= render @groups %>
      </div>
    <%end%>
    <%= link_to 'Add Category group', new_group_path, class: "btn-primary" %>

  </div>
</div>
