<div id="<%= dom_id group %>" class='flex gap-6 items-center rounded p-3 shadow-lg justify-between'>
  <div class='flex gap-6 items-center'>
    <img src=<%=group.icon%> alt=<%=group.name%> class='w-12 h-12'>
      <div>
        <%= link_to group.name, group_entities_path(group), class: "text-2xl" %>
        <p class=' text-xs'><%=group.updated_at%></p>
      </div>
  </div>

  <div>
    <p class=' text-lg'>$<%=group.amount%></p>
  </div>
  
  
</div>
<hr class="my-6">